{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": { "includeFiles":["My-First-Site/**"]}
        },
        {
            "src": "public/**",
            "use": "@vercel/static",
            "config": { "includeFiles": ["My-First-Site/**"] }
          }
    ],
    "routes": [
        {
            "src": "My-First-Site/(.*)",
            "dest": "index.js"
        },
        {
          "src": "/",
          "dest": "My-First-Site/public/templates/home.html"
        }
    ]
}